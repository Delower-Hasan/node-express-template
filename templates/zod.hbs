import { z } from 'zod'

const createOperation = z.object({ 
  body: z.object({ 
    title: z.string(),
    description: z.string() 
  })})
  
const queryOperation = z.object({ query: z.object({ search: z.string().optional() })}) 
const getOperation = z.object({ params: z.object({ id: z.string() })}) 
const updateOperation = z.object({ params: z.object({ id: z.string() }), 
  body: z.object({
    title: z.string().optional(), 
    description: z.string().optional() 
  })}) 
const deleteOperation = z.object({ params: z.object({ id: z.string() })}) 

export const {{camelCase name}}Zod = { createOperation, queryOperation, getOperation, updateOperation, deleteOperation }